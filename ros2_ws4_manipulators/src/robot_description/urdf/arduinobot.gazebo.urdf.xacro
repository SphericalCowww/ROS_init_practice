<?xml version="1.0"?>
<!-- ======================================================================================================== -->
<!-- reference from  Antonio Brandi, "Robotics and ROS 2 - Learn by Doing! Manipulators" (Udemy) -->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="arduinobot">
    <xacro:include filename="_GlobalConfigs.urdf.xacro"/>

    <xacro:property name="effort"   value="30.0" />
    <xacro:property name="velocity" value="10.0" />
<!-- ======================================================================================================== -->
    <!-- Links -->
    <link name="world"/>

    <link name="base_link">
        <visual>
            <origin rpy="0 0 0" xyz="-0.5 -0.5 0"/>
            <geometry>
                <mesh filename="package://robot_description/mesh/basement.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="-0.5 -0.5 0"/>
            <geometry>
                <mesh filename="package://robot_description/mesh/basement.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
        <xacro:lazy_inertia m="1.0"/>
    </link>

    <link name="base_plate">
        <visual>
            <origin rpy="0 0 0" xyz="-0.39 -0.39 -0.56"/>
            <geometry>
                <mesh filename="package://robot_description/mesh/base_plate.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="-0.39 -0.39 -0.56"/>
            <geometry>
                <mesh filename="package://robot_description/mesh/base_plate.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
        <xacro:lazy_inertia m="0.1"/>
    </link>

    <link name="forward_drive_arm">
        <visual>
            <origin rpy=" 0 -${pi/2} ${pi/2}" xyz="0.19 0.06 -0.08"/>
            <geometry>
                <mesh filename="package://robot_description/mesh/forward_drive_arm.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy=" 0 -${pi/2} ${pi/2}" xyz="0.19 0.06 -0.08"/>
            <geometry>
                <mesh filename="package://robot_description/mesh/forward_drive_arm.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
        <xacro:lazy_inertia m="0.1"/>
    </link>

    <link name="horizontal_arm">
        <visual>
            <origin rpy="${pi/2} 0 ${pi/2}" xyz="-0.03 -0.4 -0.06"/>
            <geometry>
                <mesh filename="package://robot_description/mesh/horizontal_arm.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="${pi/2} 0 ${pi/2}" xyz="-0.03 -0.4 -0.06"/>
            <geometry>
                <mesh filename="package://robot_description/mesh/horizontal_arm.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
        <xacro:lazy_inertia m="0.1"/>
    </link>

    <link name="claw_support">
        <visual>
            <origin rpy="0 0 ${pi/2}" xyz="0 -0.05 -0.15"/>
            <geometry>
                <mesh filename="package://robot_description/mesh/claw_support.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 ${pi/2}" xyz="0 -0.05 -0.15"/>
            <geometry>
                <mesh filename="package://robot_description/mesh/claw_support.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
        <xacro:lazy_inertia m="0.05"/>
    </link>

    <link name="gripper_right">
        <visual>
            <origin rpy="0 0 -${pi/2}" xyz="-0.1 0.50 -0.1"/>
            <geometry>
                <mesh filename="package://robot_description/mesh/right_finger.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 -${pi/2}" xyz="-0.1 0.50 -0.1"/>
            <geometry>
                <mesh filename="package://robot_description/mesh/right_finger.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
        <xacro:lazy_inertia m="0.01"/>
    </link>

    <link name="gripper_left">
        <visual>
            <origin rpy="0 0 -${pi/2}" xyz="-0.04 0.50 -0.1"/>
            <geometry>
                <mesh filename="package://robot_description/mesh/left_finger.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 -${pi/2}" xyz="-0.04 0.50 -0.1"/>
            <geometry>
                <mesh filename="package://robot_description/mesh/left_finger.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
        <xacro:lazy_inertia m="0.01"/>
    </link>

    <link name="rgb_camera">
        <visual>
            <origin rpy="-1.57 0 -1.57" xyz="-0.1 0.125 0.15"/>
            <geometry>
                <mesh filename="package://robot_description/mesh/pi_camera.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="-1.57 0 -1.57" xyz="-0.1 0.125 0.15"/>
            <geometry>
                <mesh filename="package://robot_description/mesh/pi_camera.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
        <xacro:lazy_inertia m="0.1"/>
    </link>

<!-- ======================================================================================================== -->
    <!-- Joints -->  
    <joint name="virtual_joint" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint> 

    <joint name ="joint_1" type="revolute">
        <parent link="base_link"/>
        <child link = "base_plate"/>
        <origin xyz="0 0 0.307"/>
        <axis xyz="0 0 1"/>
        <limit lower="-${pi/2}" upper="${pi/2}" 
               effort="${effort}" velocity="${velocity}"/>
    </joint>

    <joint name ="joint_2" type="revolute">
        <parent link="base_plate"/>
        <child link = "forward_drive_arm"/>
        <origin xyz="-0.02 0 0.35"/>
        <axis xyz="1 0 0"/>
        <limit lower="-${pi/2}" upper="${pi/2}"
                effort="${effort}" velocity="${velocity}"/>
    </joint>

    <joint name ="joint_3" type="revolute">
        <parent link="forward_drive_arm"/>
        <child link = "horizontal_arm"/>
        <origin xyz="0 0 0.8"/>
        <axis xyz="1 0 0"/>
        <limit lower="-${pi/2}" upper="${pi/2}"
               effort="${effort}" velocity="${velocity}"/>
    </joint>

    <joint name ="horizontal_arm_to_claw_support" type="fixed">
        <parent link="horizontal_arm"/>
        <child link = "claw_support"/>
        <origin xyz="0 0.82 0"/>
    </joint>

    <joint name ="joint_4" type="revolute">
        <parent link="claw_support"/>
        <child link = "gripper_right"/>
        <origin xyz="-0.04 0.13 -0.1"/>
        <axis xyz="0 0 1"/>
        <limit lower="-${pi/2}" upper="0.0" 
               effort="${effort}" velocity="${velocity}"/>
    </joint>

    <joint name ="joint_5" type="revolute">
        <parent link="claw_support"/>
        <child link = "gripper_left"/>
        <origin xyz="-0.22 0.13 -0.1"/>
        <axis xyz="0 0 1"/>
        <limit lower="0.0" upper="${pi/2}" 
               effort="${effort}" velocity="${velocity}"/>
        <mimic joint="joint_4" multiplier="-1"/>
    </joint>

    <joint name ="rgb_camera_joint" type="fixed">
        <parent link="base_link"/>
        <child link = "rgb_camera"/>
        <origin xyz="0 0.45 0.2" rpy="0 -0.5 1.57"/>
    </joint>
<!-- ======================================================================================================== -->
    <!-- Gazebo -->
    <gazebo reference="rgb_camera">
        <sensor name="camera" type="camera">
            <pose>0 0 0 0 0 0</pose>
            <visualize>true</visualize>
            <always_on>1</always_on>
            <update_rate>10</update_rate>
            <topic>camera/image</topic>
            <camera>
                <horizontal_fov>1.3962634</horizontal_fov>
                <image>
                    <width>640</width>
                    <height>480</height>
                    <format>R8G8B8</format>
                </image>
                <clip>
                    <near>0.1</near>
                    <far>15</far>
                </clip>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.007</stddev>
                </noise>
                <optical_frame_id>camera_link_optical</optical_frame_id>
                <camera_info_topic>camera/camera_info</camera_info_topic>
            </camera>
        </sensor>
        <plugin name="libgazebo_ros_camera.so" filename="gazebo_ros::Camera">
            <frame_name>rgb_camera</frame_name>
        </plugin>
    </gazebo>
<!-- ======================================================================================================== -->

</robot>
